<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Indicador de color por tipo de residuo -->
        <View
            android:id="@+id/color_indicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@android:color/holo_green_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Tipo de residuo -->
        <TextView
            android:id="@+id/tv_waste_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/color_indicator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_waste_quantity"
            tools:text="Residuos Orgánicos" />

        <!-- Cantidad -->
        <TextView
            android:id="@+id/tv_waste_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="15.5 kg" />

        <!-- Ubicación -->
        <TextView
            android:id="@+id/tv_waste_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="4dp"
            app:layout_constraintStart_toEndOf="@+id/color_indicator"
            app:layout_constraintTop_toBottomOf="@+id/tv_waste_type"
            app:layout_constraintEnd_toStartOf="@+id/tv_waste_date"
            tools:text="Zona Industrial Norte" />

        <!-- Fecha -->
        <TextView
            android:id="@+id/tv_waste_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:drawableStart="@drawable/ic_calendar"
            android:drawablePadding="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_waste_quantity"
            tools:text="15/12/2023" />

        <!-- Comentarios (solo visible si hay contenido) -->
        <TextView
            android:id="@+id/tv_waste_comments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:textStyle="italic"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/color_indicator"
            app:layout_constraintTop_toBottomOf="@+id/tv_waste_location"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Material recolectado en buen estado"
            tools:visibility="visible" />

        <!-- Botones de acción -->
        <LinearLayout
            android:id="@+id/action_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_waste_comments">

            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_edit"
                android:contentDescription="@string/edit" />

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"
                android:contentDescription="@string/delete" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>